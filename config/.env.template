# Environment Variables Template
# Copy this file to .env and fill in your values

# Azure AI Foundry Configuration
AZURE_AI_PROJECT_CONNECTION_STRING=your_ai_foundry_project_connection_string_here
AZURE_AI_PROJECT_NAME=your_ai_foundry_project_name_here
AZURE_AI_DEPLOYMENT_NAME=your_deployment_name_here

# Azure Authentication
AZURE_TENANT_ID=your_azure_tenant_id_here
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here

# Azure Blob Storage Configuration (for bird detection data)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string_here
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name_here
BLOB_CONTAINER_NAME=bird-detection-data

# Microsoft Fabric Configuration
FABRIC_WORKSPACE=your_fabric_workspace_here
FABRIC_TOKEN=your_fabric_access_token_here
FABRIC_LAKEHOUSE=your_lakehouse_name_here

# Image Generation (Artist Agent)
# Use either OpenAI or Azure OpenAI for DALL-E image generation
OPENAI_API_KEY=your_openai_api_key_here
# OR for Azure OpenAI:
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com

# Hugo Site Configuration
HUGO_BASE_URL=https://yourblog.com
HUGO_OUTPUT_DIR=content/posts

# GitHub Configuration (Committer Agent)
# Personal Access Token for authenticating with GitHub
GITHUB_TOKEN=your_github_token_here
# Optional: Override the repository URL from config.yaml
GITHUB_REPO_URL=https://github.com/toddwhitehead/acme-giyt-web
